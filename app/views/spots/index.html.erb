<div class = "spots">
  <!-- display all spots in a page -->
  <% @spots.each do |spot| %>
  <div class="col-md-4">
    <div class="card hovercard">
        <div class="avatar">
          <img alt="" src="<%=spot.image_url%>">
        </div>
        <div class="info">
            <div class="title">
                <h4><%=spot.name%></h4><br>
            </div>
            <div class="bottom">
                <p><%=spot.description%></p><br>
            </div>
            <!-- Display number of trees -->
            <p>Sur ce spot, il y a <%= spot.trees.count %> arbres identifiés.</p><br>
            <!-- Display different taxa -->
            <div>
              Et <%= spot.taxa_count %> espèces différentes :
              <%= spot.taxa_array.join(', ') %>
            </div>
            <br>
            <%= link_to 'Détails', spot, class: "button-one" %>
        </div>
    </div>
  </div>
<% end %>
</div>
<br>
