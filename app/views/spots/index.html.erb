<div class="container">
  <div class="text-center mt-4">
    <h1 class="lead">
      Liste des spots
    </h1>
  </div>
  <div class="row">
    <% @spots.each do |spot| %>
      <div class="col-12 col-md-6 col-lg-3">
      <!-- display all spots in a page -->
        <div class="card">
          <img class="card-img-top" src="<%= spot.image_url %>" alt="Unsplash">
          <div class="card-header">
            <h5 class="card-title mb-0"><%= spot.name %></h5>
          </div>
          <div class="card-body text-center">
            <div class="row">
              <div class="">
                <span class="badge badge-pill badge-info"><%= spot.trees.count %></span>
              </div>
              <div class="">
                <p>Arbres localisés</p>
              </div>
            </div>
            <div class="row">
              <div class="">
                <span class="badge badge-pill badge-info"><%= spot.taxa_count %></span>
              </div>
              <div class="">
                <p>Espèces identifiées</p>
              </div>
            </div>
            <p><%= link_to 'Détails', spot, class: "btn btn-info" %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
