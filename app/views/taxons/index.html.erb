<main class="content">
  <div class="container-fluid p-0">

    <h1 class="h3 mb-3">Liste des taxons</h1>

    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-header">
            <h5 class="card-title">A finir...</h5>
            <h6 class="card-subtitle text-muted">Reste à ajouter le javascript qui permet le tri et le responsive</h6>
          </div>
          <div class="card-body">

            <table id="datatables-basic" class="table table-striped" style="width:100%">
              <thead>
                <tr>
                  <th>Nom commun</th>
                  <th>Famille</th>
                  <th>Genre</th>
                  <th>Espèce</th>
                </tr>
              </thead>
              <tbody>
                <% @taxons.each do |taxon| %>
                  <tr>
                    <td><%= taxon.common_noun %></td>
                    <td><%= taxon.family %></td>
                    <td><%= taxon.genus %></td>
                    <td><%= taxon.species %></td>
                  </tr>
                <% end %>
              </tbody>
              <tfoot>
                <tr>
                  <th>Nom commun</th>
                  <th>Famille</th>
                  <th>Genre</th>
                  <th>Espèce</th>
                </tr>
              </tfoot>
            </table>

          </div>
        </div>
      </div>
    </div>

